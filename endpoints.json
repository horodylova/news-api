{
  "GET /api": {
    "description": "serves a list of all available endpoints"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [ "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  
  "GET /api/articles/:article_id": {
    "description": "serves a single article by article_id",
    "pathParameters": ["article_id"],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments for the given article_id",
    "pathParameters": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 14,
          "created_at": "2017-11-22T12:36:03.389Z",
          "author": "butter_bridge",
          "body": "This is a comment",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to the specified article",
    "pathParameters": ["article_id"],
    "requestBody": {
      "username": "butter_bridge",
      "body": "This is a test comment"
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 1,
        "body": "This is a test comment",
        "author": "butter_bridge",
        "article_id": 1,
        "created_at": "2023-07-16T14:53:00.000Z",
        "votes": 0
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by comment_id",
    "pathParameters": ["comment_id"],
    "responses": {
      "204": "No Content",
      "404": {
        "description": "Comment not found",
        "exampleResponse": {
          "msg": "Not Found"
        }
      }
    }
  }
}
